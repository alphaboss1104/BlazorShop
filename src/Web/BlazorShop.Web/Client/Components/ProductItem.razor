<div class="col-md-4 col-xs-6">
    <div class="product-item">
        <div class="product-img">
            <a href="/products/@Product.Id/@Product.Name">
                <img src="@Product.ImageSource" alt="@Product.Name" style="width: 400px; height: 300px;">
            </a>
            <a href="/products/@Product.Id/@Product.Name" class="product-quickview">View</a>
        </div>
        <div class="product-details">
            <h3>
                <a class="product-title" href="shop-single-product.html">@Product.Name</a>
            </h3>
            <span class="price">
                @*<del>
                        TODO: Add out of stock
                        <span>$388.00</span>
                </del>*@
                <ins>
                    <span class="ammount">$@Product.Price</span>
                </ins>
            </span>
        </div>
    </div>
</div>

@code {
    [Parameter] public ProductsListingResponseModel Product { get; set; }
}
